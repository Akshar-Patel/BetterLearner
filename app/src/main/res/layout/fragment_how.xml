<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="in.aternal.betterlearner.HowFragment">
  <TextView
    android:id="@+id/text_view_heading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_double_default"
    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
    android:textSize="@dimen/text_size_large_default"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_single_default"
    android:layout_marginStart="@dimen/margin_single_default"
    android:layout_marginEnd="@dimen/margin_single_default"
    app:cardUseCompatPadding="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/text_view_heading"
    >
    <android.support.v7.widget.RecyclerView
      android:id="@+id/recycler_view_technique_how_steps"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:contentDescription="@string/content_desc_recycler_view_technique_how_steps"/>
  </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
