<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">
  <View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="@color/colorHorizontalRule"/>
  <TextView
    android:id="@+id/text_view_technique_how_step"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_double_default"
    android:contentDescription="@string/content_desc_text_view_technique_how_step"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    android:textSize="@dimen/text_size_large_default"
    tools:layout_editor_absoluteX="16dp"
    tools:layout_editor_absoluteY="16dp"
    tools:text="TextView"/>
</LinearLayout>